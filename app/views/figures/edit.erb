<h1>Edit Figure</h1>

<form action="/figures/<%= @figure.id %>" method="POST">
<input type="hidden" name="_method" value="patch">
    <label>Figure's Name:</label>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br>
  
  <h3>Edit Titles</h3>
  <% Title.all.each do |title| %>
  <label><%=title.name%></label>
    <input type="checkbox" name="figure[title_ids]" id="<%= title.id %>" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title)%>> <br>
  <% end %>
  <br>
  <label>Add New Title: </label>
  <input type="text" id="new_title" name="title[name]"><br>

  <h3>Edit Landmark's</h3>
  <% Landmark.all.each do |landmark| %>
  <label> <%=landmark.name%></label>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.id %>" value="<%= landmark.id %>"<%='checked' if @figure.landmarks.include?(landmark)%>> <br>
  <% end %>
  <br>
  <label>Add New Landmark: </label>
  <input type="text" id="new_landmark" name="landmark[name]"><br>

  <input type="submit" id="submit" value="Edit Figure">

</form>