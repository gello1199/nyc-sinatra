<h1>Create a new Figure</h1>

<form action="/figures" method="POST">
    <label>Name:</label>
    <input type="text" name="figure[name]" id="figure_name"><br>
  
  <label>Titles</label>
  <% Title.all.each do |title| %>
  <label> <%=title.name%></label>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"> <br>
  <% end %>
  <br>

  <label>Create New Title: </label>
  <input type="text" name="title[name]" id="new_title"></input>
  <br><br>

  <h3>Landmarks</h3>
  <% Landmark.all.each do |landmark| %>
  <label> <%=landmark.name%></label>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><br>
  <% end %>
  <br>

 
  <label>Create New Landmark: </label>
  <br>
  <label>Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark"></input><br>
  <label>Landmark Year: </label>
  <br>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed"></input>
  <br><br>

  <input type="submit" id="submit" value="Create New Figure">

</form>